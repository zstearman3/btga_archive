<% provide(:title, @golfer.name) %>

<div class="table-container">
  <div class="table-info">
    <h3><%= @golfer.name %></h3>
  </div>
  <div class="table-wrapper">
    <table class="index-table">
      <thead>
          <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Event</th>
            <th>Course</th>
            <th>Score</th>
            <th>Finish</th>
            <th>Points</th>
          </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.season_tournament.start_date.strftime('%m/%d/%Y') %></td>
            <td><%= event.season_tournament.type_stub %></td>
            <td><%= link_to event.season_tournament.tournament_name_with_year, event.season_tournament, class: "block-link" %></td>
            <td><%= event.season_tournament.course_name %></td>
            <td><%= event.display_score_to_par %></td>
            <td><%= event.finish %></td>
            <td><%= event.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>