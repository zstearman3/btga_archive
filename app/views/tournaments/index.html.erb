<% provide(:title, 'Tournaments') %>

<div class="table-container">
  <div class="table-info">
    <h3>BTGA Tournaments</h3>
    <%= link_to 'New Tournament', new_tournament_path %>
  </div>
  <div class="table-wrapper">
    <table class="index-table">
      <thead>
        <tr>
          <th>Tournament</th>
          <th>Course</th>
          <th>Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tournaments.all.each do |tournament| %>
          <tr>
            <td><%= tournament.name %></td>
            <td><%= tournament.home_course %></td>
            <td><%= tournament.level %></td>
            <td><%= link_to 'Edit', edit_tournament_path(tournament) %> | 
                <%= link_to 'Delete', tournament, method: :delete, data: { confirm: 'Are you sure?' } %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>