<% provide(:title, "#{@season.year} Season") %>

<div class="event-banner">
  <div class="current-event">
    <div class="event-info">
      <h3><%= @season.current_event.tournament_name %></h3>
      <p>Ends <%= @season.current_event.end_date.strftime("%m/%d/%Y") %></p>
    </div>
  </div>
  <div class="next-event">
    
  </div>
</div>

<div class="table-container">
  <div class="table-info">
    <h3>BTGA Standings</h3>
  </div>
  <div class="table-wrapper">
    <table class="index-table">
      <thead>
        <th>POS</th>
        <th>Golfer</th>
        <th>Points</th>
        <th>Events</th>
        <th>Wins</th>
      </thead>
      <tbody>
        <% i = 1 %>
        <% @seasons.all.each do |season| %>
          <tr>
            <td><%= i %></td>
            <td><%= season.name %></td>
            <td><%= season.points %></td>
            <td><%= season.events %></td>
            <td><%= season.wins %></td>
          </tr>
          <% i += 1 %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>