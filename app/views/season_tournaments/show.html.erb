<% provide(:title, @event.tournament_name) %>

<div class="table-container">
  <div class="leaderboard-info">
    <div class="event-info">
      <h3><%= @event.tournament_name %></h3>
      <p><%= "#{@event.course_name} â€¢ #{@event.start_date.strftime("%m/%d/%Y")}" %></p>
    </div>
    <%= link_to 'New Golfer', new_season_tournament_golfer_event_path(@event) %>
  </div>
  <div class="table-wrapper">
    <table class="leaderboard">
      <thead>
        <tr>
          <th>POS</th>
          <th>Golfer</th>
          <th>Total</th>
          <% for i in 1..@event.rounds %>
            <th><%= "R#{i}" %></th>
          <% end %>
          <th>Strokes</th>
          <% if !@event.finalized %>
            <th>Actions</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @golfer_events.each do |event| %>
          <tr>
            <td><%= event.finish %></td>
            <td><%= event.golfer.name %></td>
            <td><%= event.score_to_par %></td>
            <% event.golfer_rounds.order(:round_order).each do |round| %>
            <td><%= round.score %></td>
            <% end %>
            <% (@event.rounds - event.golfer_rounds.count).times do %>
            <td></td>
            <% end %>
            <td><%= event.score %></td>
            <% if !@event.finalized %>
              <td>Edit | Delete</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if !@event.finalized %>
    <%= link_to "Finalize Event", finalize_event_path(@event) %>
  <% else %>
    <%= link_to "Unfinalize Event", unfinalize_event_path(@event) %>
  <% end %>
</div>